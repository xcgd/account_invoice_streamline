<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_invoice_supplier_streamline_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.streamline.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form" />
            <field name="arch" type="xml">

                <xpath
                    expr="//notebook/page/field[@name='invoice_line']/tree/field[@name='price_subtotal']"
                    position="after">
                    <div class="oe_analytic" />
                </xpath>

                <!-- Make the due date read-only when a payment term is selected. -->

                <xpath expr="//field[@name='date_due']" position="attributes">
                    <attribute name="attrs"><![CDATA[
                    {'readonly': [('payment_term', '!=', False)]}
                    ]]></attribute>
                </xpath>

                <!-- We want the button 'Cancel Invoice' to call a function instead of a workflow instance -->
                <xpath expr="//button[@name='invoice_cancel']" position="after">
                    <button name="wizard_invoice_cancel" string="Reverse Invoice" type="object" states="draft,proforma2,open" groups="account.group_account_user" />
                </xpath>

            </field>
        </record>

        <record id="account_invoice_streamline_form" model="ir.ui.view">
            <field name="name">account.invoice.streamline.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">

                <!-- We want the button 'Cancel Invoice' to call a function instead of a workflow instance -->
                <xpath expr="//button[@name='invoice_cancel']" position="after">
                    <button name="wizard_invoice_cancel" string="Reverse Invoice" type="object" groups="account.group_account_user" />
                </xpath>

                <xpath
                    expr="//notebook/page/field[@name='invoice_line']/tree/field[@name='price_subtotal']"
                    position="after">
                    <div class="oe_analytic" />
                </xpath>

                <!-- Make the due date read-only when a payment term is selected. -->

                <xpath expr="//field[@name='date_due']" position="attributes">
                    <attribute name="attrs"><![CDATA[
                    {'readonly': [('payment_term', '!=', False)]}
                    ]]></attribute>
                </xpath>

            </field>
        </record>
    </data>
</openerp>
